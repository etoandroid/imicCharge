<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="imicCharge.APP.Controls.CustomAlert"
             IsVisible="False"
             BackgroundColor="#80000000">
    <Grid HorizontalOptions="Center" VerticalOptions="Center">
        <Border StrokeThickness="1"
                Stroke="{StaticResource FirdaAccentLightBlue}"
                BackgroundColor="{StaticResource FirdaPrimaryDarkBlue}"
                Padding="20"
                StrokeShape="RoundRectangle 10"
                WidthRequest="300">
            <VerticalStackLayout Spacing="15">
                <Label x:Name="TitleLabel"
                       Text="Tittel"
                       TextColor="White"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <Label x:Name="MessageLabel"
                       Text="Dette er meldinga."
                       TextColor="White"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />

                <Button x:Name="OkButton"
                        Text="OK"
                        Clicked="OnOkButtonClicked"
                        BackgroundColor="{StaticResource FirdaAccentLightBlue}"
                        TextColor="White"
                        Margin="0,10,0,0" />
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentView>