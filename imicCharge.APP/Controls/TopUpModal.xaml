<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="imicCharge.APP.Controls.TopUpModal"
             IsVisible="False"
             Opacity="0"
             InputTransparent="False"
             BackgroundColor="#80000000">
    <Grid HorizontalOptions="Center" VerticalOptions="Center">
        <Border StrokeThickness="1"
                Stroke="{StaticResource FirdaAccentLightBlue}"
                BackgroundColor="{StaticResource FirdaPrimaryDarkBlue}"
                Padding="20"
                StrokeShape="RoundRectangle 10"
                WidthRequest="300">
            <VerticalStackLayout Spacing="15">
                <Label Text="Fyll på konto"
                       TextColor="White"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <Label Text="Skriv inn beløp (NOK):"
                       TextColor="LightGray"
                       FontSize="14"
                       HorizontalOptions="Start" />

                <Entry x:Name="AmountEntry"
                       Placeholder="50 - 2000"
                       Keyboard="Numeric"
                       TextColor="White"
                       PlaceholderColor="Gray"
                       BackgroundColor="#18417F"
                       TextChanged="AmountEntry_TextChanged"
                       Completed="AmountEntry_Completed"
                       ReturnType="Go"/>

                <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,0">
                    <Button x:Name="PayButton"
                            Grid.Column="0"
                            Text="Gå til betaling"
                            Clicked="OnPayButtonClicked"
                            BackgroundColor="{StaticResource FirdaAccentLightBlue}"
                            TextColor="White" />
                    <Button x:Name="CancelButton"
                            Grid.Column="1"
                            Text="Avbryt"
                            Clicked="OnCancelButtonClicked"
                            BackgroundColor="Transparent"
                            BorderColor="Gray"
                            BorderWidth="1"
                            TextColor="White" />
                </Grid>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentView>