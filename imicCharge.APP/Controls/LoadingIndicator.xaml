<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="imicCharge.APP.Controls.LoadingIndicator"
             IsVisible="False"
             InputTransparent="False" 
             BackgroundColor="#80000000">
    <Grid HorizontalOptions="Center" VerticalOptions="Center">
        <Border StrokeThickness="1"
                Stroke="{StaticResource FirdaAccentLightBlue}"
                BackgroundColor="{StaticResource FirdaPrimaryDarkBlue}"
                Padding="20"
                StrokeShape="RoundRectangle 10"
                WidthRequest="250">
            <VerticalStackLayout Spacing="15"
                                 HorizontalOptions="Center" 
                                 VerticalOptions="Center">
                <ActivityIndicator x:Name="Spinner"
                                   IsRunning="False" 
                                   Color="{StaticResource FirdaAccentLightBlue}" />
                <Label x:Name="MessageLabel"
                       Text="Loading..."
                       TextColor="White"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentView>