<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="imicCharge.APP.TopUpPage"
             Title="Fyll på saldo"
             BackgroundColor="{StaticResource FirdaPrimaryDarkBlue}">

    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label 
            Text="Vel beløp å fylle på"
            TextColor="White"
            FontSize="24"
            HorizontalOptions="Center" />

        <Entry
            x:Name="AmountEntry"
            Placeholder="Skriv inn beløp (NOK)"
            Keyboard="Numeric"
            TextColor="White"
            PlaceholderColor="LightGray"
            HorizontalOptions="Center" />

        <Button
            x:Name="PayButton"
            Text="Gå til betaling"
            Clicked="OnPayButtonClicked"
            HorizontalOptions="Center"
            BackgroundColor="{StaticResource FirdaAccentLightBlue}"
            TextColor="White"
            Margin="0,20,0,0"/>

    </VerticalStackLayout>
</ContentPage>