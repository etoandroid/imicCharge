<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="imicCharge.APP.LoginPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource FirdaPrimaryDarkBlue}">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="15"
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <!-- Logo -->
            <Image
                Source="logo_firda.png"
                HeightRequest="150"
                Margin="0,40,0,10"
                SemanticProperties.Description="Firda Seafood logo" />

            <!-- App title -->
            <Label
                Text="Firda FjordLading"
                TextColor="White"
                FontSize="32"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <!-- Slagord -->
            <Label
                Text="Takk for at du ladar grønt – for fjorden vår."
                TextColor="{StaticResource FirdaAccentLightBlue}"
                FontSize="16"
                FontAttributes="Italic"
                HorizontalOptions="Center"
                Margin="0,0,0,30" />

            <!-- Login fields -->
            <Frame BackgroundColor="#1C2251" Padding="20" CornerRadius="10" BorderColor="Transparent" WidthRequest="300">
                <VerticalStackLayout Spacing="20">
                    <Entry
                        x:Name="EmailEntry"
                        Placeholder="E-post"
                        Keyboard="Email"
                        TextColor="White"
                        PlaceholderColor="LightGray"
                        BackgroundColor="Transparent" />

                    <Entry
                        x:Name="PasswordEntry"
                        Placeholder="Passord"
                        IsPassword="True"
                        TextColor="White"
                        PlaceholderColor="LightGray"
                        BackgroundColor="Transparent"/>

                    <Button
                        x:Name="LoginButton"
                        Text="Logg inn"
                        Clicked="OnLoginClicked"
                        HorizontalOptions="Fill" 
                        BackgroundColor="#1c2251"
                        TextColor="White"
                        BorderColor="{StaticResource FirdaAccentLightBlue}"
                        BorderWidth="1"/>

                    <Button
                        x:Name="RegisterButton"
                        Text="Registrer ny brukar"
                        Clicked="OnRegisterClicked"
                        HorizontalOptions="Fill"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource FirdaAccentLightBlue}"/>
                </VerticalStackLayout>
            </Frame>

            <Label
                x:Name="StatusLabel"
                HorizontalOptions="Center"
                TextColor="Red" 
                Margin="0,10,0,0"/>

            <!-- Copyright info -->
            <Label
                Text="© Firda Seafood Group"
                TextColor="White"
                FontSize="12"
                HorizontalOptions="Center"
                VerticalOptions="End"
                Margin="0,50,0,20"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>