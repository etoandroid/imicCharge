<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="imicCharge.APP.LoginPage"
             Title="Innlogging">
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Label
            Text="Logg inn"
            SemanticProperties.HeadingLevel="Level1"
            FontSize="32"
            HorizontalOptions="Center" />

        <Entry
            x:Name="EmailEntry"
            Placeholder="E-post"
            Keyboard="Email" />

        <Entry
            x:Name="PasswordEntry"
            Placeholder="Passord"
            IsPassword="True" />

        <Button
            x:Name="LoginButton"
            Text="Logg inn"
            Clicked="OnLoginClicked"
            HorizontalOptions="Center" />

        <Label
            x:Name="StatusLabel"
            HorizontalOptions="Center"
            TextColor="Red" />

    </VerticalStackLayout>
</ContentPage>